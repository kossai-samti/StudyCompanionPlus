{% extends 'base.html.twig' %}

{% block body_class %}back-shell{% endblock %}

{% block stylesheets %}
  <style>
    :root{
      --navy-950:#030b1b;
      --navy-900:#081834;
      --navy-800:#0f2a4f;
      --text:#e7f1ff;
      --muted:#adc3e7;
      --gold:#ffd86b;
      --line:rgba(197,218,255,.18);
    }
    *{box-sizing:border-box}
    body{
      margin:0;
      color:var(--text);
      font-family:"Trebuchet MS","Segoe UI","Verdana",sans-serif;
      background:
        radial-gradient(circle at 12% -4%, #1a3767 0, transparent 38%),
        radial-gradient(circle at 95% 12%, #13325f 0, transparent 34%),
        linear-gradient(180deg,var(--navy-900),var(--navy-950));
      min-height:100vh;
    }
    a{color:inherit}
    .back-nav{
      position:sticky;
      top:0;
      z-index:20;
      margin:14px;
      padding:12px 16px;
      background:rgba(8,24,52,.8);
      border:1px solid var(--line);
      border-radius:16px;
      backdrop-filter:blur(8px);
      display:flex;
      gap:14px;
      align-items:center;
      justify-content:space-between;
    }
    .brand{
      text-decoration:none;
      color:var(--gold);
      font-weight:800;
    }
    .badge{
      display:inline-block;
      border-radius:999px;
      border:1px solid rgba(255,216,107,.4);
      padding:4px 8px;
      margin-left:8px;
      font-size:12px;
      color:#fff4d0;
      background:rgba(255,216,107,.15);
    }
    .links{display:flex;gap:6px;flex-wrap:wrap}
    .links a{
      text-decoration:none;
      color:var(--muted);
      padding:8px 11px;
      border-radius:10px;
      font-size:14px;
    }
    .links a.active{
      background:#1d3f73;
      color:#fff;
      border:1px solid rgba(255,255,255,.15);
    }
    .menu{
      background:rgba(255,255,255,.06);
      border:1px solid var(--line);
      border-radius:10px;
      padding:8px 10px;
      font-size:13px;
      color:#fff;
    }
    .menu summary{cursor:pointer;list-style:none}
    .menu summary::-webkit-details-marker{display:none}
    .menu a{
      text-decoration:none;
      display:block;
      margin-top:8px;
      color:#fff;
      font-weight:700;
    }
    .container{max-width:1160px;margin:0 auto;padding:0 18px 30px}
    .panel{
      background:rgba(8,31,59,.72);
      border:1px solid var(--line);
      border-radius:14px;
      padding:16px;
      box-shadow:0 12px 24px rgba(0,0,0,.2);
    }
    .grid{display:grid;gap:12px}
    .action{
      display:inline-block;
      text-decoration:none;
      background:#1b406f;
      color:#fff;
      border:1px solid rgba(255,255,255,.2);
      border-radius:10px;
      padding:9px 12px;
      font-weight:700;
      margin-right:8px;
      margin-bottom:8px;
    }
    .action.gold{
      background:var(--gold);
      color:#2f2200;
      border:none;
    }
    @media (max-width: 920px){
      .back-nav{flex-direction:column;align-items:flex-start}
      .container{padding:0 14px 26px}
    }
  </style>
{% endblock %}

{% block body %}
  {% set route = app.request.attributes.get('_route') %}
  {% set user = app.session.get('demo_user')|default({'name': 'User'}) %}
  {% set panel = panel|default('teacher') %}

  <nav class="back-nav">
    <div>
      <a href="{{ panel == 'admin' ? path('admin_dashboard') : path('teacher_dashboard') }}" class="brand">
        StudyCompanionPlus
      </a>
      <span class="badge">{{ panel == 'admin' ? 'Admin' : 'Teacher' }}</span>
    </div>

    <div class="links">
      {% if panel == 'admin' %}
        <a href="{{ path('admin_dashboard') }}" class="{{ route == 'admin_dashboard' ? 'active' : '' }}">Dashboard</a>
        <a href="{{ path('admin_users') }}" class="{{ route == 'admin_users' ? 'active' : '' }}">Users</a>
        <a href="{{ path('admin_groups') }}" class="{{ route == 'admin_groups' ? 'active' : '' }}">Groups</a>
        <a href="{{ path('admin_lessons') }}" class="{{ route == 'admin_lessons' ? 'active' : '' }}">Lessons</a>
        <a href="{{ path('admin_quizzes') }}" class="{{ route == 'admin_quizzes' ? 'active' : '' }}">Quizzes</a>
      {% else %}
        <a href="{{ path('teacher_dashboard') }}" class="{{ route == 'teacher_dashboard' ? 'active' : '' }}">Dashboard</a>
        <a href="{{ path('teacher_students') }}" class="{{ route == 'teacher_students' ? 'active' : '' }}">Students</a>
        <a href="{{ path('teacher_groups') }}" class="{{ route == 'teacher_groups' ? 'active' : '' }}">Groups</a>
        <a href="{{ path('teacher_lessons') }}" class="{{ route == 'teacher_lessons' ? 'active' : '' }}">Lessons</a>
        <a href="{{ path('teacher_quizzes') }}" class="{{ route == 'teacher_quizzes' ? 'active' : '' }}">Quizzes</a>
      {% endif %}
    </div>

    <details class="menu">
      <summary>{{ user.name|default('User') }}</summary>
      <a href="{{ path('app_logout') }}">Logout</a>
    </details>
  </nav>

  <main class="container">
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="panel" style="margin-bottom:10px;border-left:4px solid {{ label == 'error' ? '#ff6b61' : '#ffd86b' }}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
    {% block content %}{% endblock %}
  </main>
{% endblock %}
