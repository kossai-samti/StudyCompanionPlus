{# templates/back/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NEURAL_COMPANION+ // FACULTY</title>
    <style>
        :root {
            --bg: #030712;
            --panel-bg: rgba(17, 24, 39, 0.7);
            --cyan: #22d3ee;
            --purple: #a855f7;
            --pink: #ec4899;
            --border: rgba(255, 255, 255, 0.1);
        }

        body {
            background-color: var(--bg);
            background-image: 
                radial-gradient(circle at 0% 0%, rgba(34, 211, 238, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 100% 100%, rgba(168, 85, 247, 0.08) 0%, transparent 40%);
            color: #f8fafc;
            font-family: 'Inter', system-ui, sans-serif;
            margin: 0; min-height: 100vh;
        }

        /* Moving RGB Line under Navbar */
        .neon-pulse-line {
            height: 2px;
            width: 100%;
            background: linear-gradient(90deg, transparent, var(--cyan), var(--purple), var(--pink), transparent);
            background-size: 200% 100%;
            animation: pulseMove 3s linear infinite;
        }

        @keyframes pulseMove {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }

        .back-nav {
            background: rgba(3, 7, 18, 0.8);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border);
            padding: 1rem 2rem;
            display: flex; justify-content: space-between; align-items: center;
        }

        .nav-group { display: flex; gap: 20px; align-items: center; }

        .nav-link {
            color: #94a3b8; text-decoration: none; font-size: 0.8rem; font-weight: 600;
            text-transform: uppercase; letter-spacing: 1px; transition: 0.3s;
        }

        .nav-link:hover, .nav-link.active { color: var(--cyan); text-shadow: 0 0 8px var(--cyan); }

        /* Terminal Logout Button */
        .terminal-exit {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #f87171;
            padding: 6px 15px;
            border-radius: 6px;
            font-family: monospace;
            text-decoration: none;
            font-size: 0.75rem;
            transition: 0.3s;
        }

        .terminal-exit:hover {
            background: #ef4444; color: white; box-shadow: 0 0 15px #ef4444;
        }

        .main-container { padding: 40px; max-width: 1400px; margin: 0 auto; }
    </style>
</head>
<body>
    <nav class="back-nav">
        <div class="nav-group">
            <span style="font-weight: 900; color: #fff; letter-spacing: -1px;">NEURAL_FACULTY+</span>
            <div style="width: 1px; height: 20px; background: var(--border); margin: 0 10px;"></div>
            <a href="{{ path('teacher_dashboard') }}" class="nav-link active">Core</a>
            <a href="#" class="nav-link">Students</a>
            <a href="{{ path('lesson_index') }}" class="nav-link">Lessons</a>
        </div>

        <div class="nav-group">
            <span style="font-family: monospace; font-size: 0.75rem; color: var(--cyan);">{{ app.user.firstName }}@NC_SERVER</span>
            <a href="{{ path('app_logout') }}" class="terminal-exit">[ DISCONNECT_SESSION ]</a>
        </div>
    </nav>
    <div class="neon-pulse-line"></div>

    <div class="main-container">
        {% block content %}{% endblock %}
    </div>
</body>
</html>