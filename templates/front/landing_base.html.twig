{% extends 'base.html.twig' %}

{% block body_class %}landing-shell{% endblock %}

{% block stylesheets %}
  <style>
    :root{
      --coral:#ff6b61;
      --coral-deep:#e85046;
      --navy:#0e1a36;
      --slate:#2b3552;
      --cream:#fffdf9;
      --line:#ebedf6;
      --yellow:#ffd23c;
    }
    *{box-sizing:border-box}
    body{
      margin:0;
      color:#1c2340;
      font-family:"Trebuchet MS","Segoe UI","Verdana",sans-serif;
      background:
        radial-gradient(circle at 8% 8%, #fff5ef 0, transparent 35%),
        radial-gradient(circle at 92% 20%, #f4ebff 0, transparent 32%),
        #f8f9ff;
    }
    .landing-nav{
      position:sticky;
      top:0;
      z-index:50;
      display:flex;
      align-items:center;
      justify-content:space-between;
      padding:16px 26px;
      border-bottom:1px solid #eceffd;
      backdrop-filter:blur(10px);
      background:rgba(248,249,255,.88);
    }
    .logo{
      font-weight:900;
      text-decoration:none;
      letter-spacing:.2px;
      color:#101938;
    }
    .nav-actions{display:flex;gap:10px}
    .btn{
      text-decoration:none;
      border-radius:10px;
      border:1px solid transparent;
      padding:10px 14px;
      font-weight:700;
      font-size:14px;
      display:inline-block;
    }
    .btn-outline{border-color:#d6dcf7;color:#192042;background:#fff}
    .btn-coral{background:var(--coral);color:#fff}
    .btn-coral:hover{background:var(--coral-deep)}
    .btn-yellow{background:var(--yellow);color:#2f2000}
    .container{max-width:1160px;margin:0 auto;padding:0 18px}
    .hero{
      display:grid;
      grid-template-columns:1.15fr .85fr;
      gap:22px;
      padding:48px 0 30px;
      align-items:center;
    }
    .headline{
      font-size:46px;
      line-height:1.07;
      margin:0 0 14px;
      color:#121d3d;
      max-width:600px;
    }
    .lead{color:#4e5677;max-width:520px}
    .preview-card{
      background:#fff;
      border:1px solid var(--line);
      border-radius:18px;
      padding:18px;
      box-shadow:0 14px 32px rgba(13,29,76,.09);
    }
    .stat-bar{
      margin:24px 0;
      background:var(--navy);
      color:#f5f7ff;
      border-radius:14px;
      padding:16px;
      display:grid;
      grid-template-columns:repeat(4,1fr);
      gap:12px;
    }
    .stat{padding:10px;border:1px solid rgba(255,255,255,.14);border-radius:10px}
    .stat strong{font-size:20px}
    .section{padding:34px 0}
    .section h2{margin:0 0 16px}
    .cards-3{display:grid;grid-template-columns:repeat(3,1fr);gap:12px}
    .feature{
      background:#fff;
      border:1px solid var(--line);
      border-radius:14px;
      padding:16px;
      box-shadow:0 8px 20px rgba(16,30,72,.07);
    }
    .icon{font-size:22px}
    .how{
      background:var(--coral);
      color:#fff;
      border-radius:18px;
      padding:26px 16px;
    }
    .step{background:#fff;color:#101938;border-radius:12px;padding:14px}
    .step-num{
      width:28px;height:28px;border-radius:50%;
      background:#101938;color:#fff;display:inline-flex;
      align-items:center;justify-content:center;font-weight:800;margin-bottom:10px;
    }
    .testimonial{
      background:#fff;
      border:1px solid var(--line);
      border-radius:14px;
      padding:16px;
    }
    .final-cta{
      margin:30px 0 36px;
      background:linear-gradient(140deg,#ff8d77,#ff675e);
      color:#fff;
      border-radius:18px;
      padding:28px 18px;
      text-align:center;
    }
    .footer{
      background:#0c1224;
      color:#dce2ff;
      padding:26px 18px;
    }
    .footer .container{display:flex;justify-content:space-between;gap:10px;flex-wrap:wrap}
    .footer a{text-decoration:none;color:#dce2ff;margin-right:12px}
    @media (max-width: 920px){
      .hero{grid-template-columns:1fr}
      .headline{font-size:36px}
      .stat-bar{grid-template-columns:repeat(2,1fr)}
      .cards-3{grid-template-columns:1fr}
    }
  </style>
{% endblock %}

{% block body %}
  <nav class="landing-nav">
    <a href="{{ path('home') }}" class="logo">StudyCompanionPlus</a>
    <div class="nav-actions">
      <a href="{{ path('app_login') }}" class="btn btn-outline">Sign In</a>
      <a href="{{ path('app_login') }}" class="btn btn-coral">Start Free</a>
    </div>
  </nav>

  {% block content %}{% endblock %}
{% endblock %}
