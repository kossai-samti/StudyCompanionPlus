{% extends 'back/base.html.twig' %}
{% set panel = 'admin' %}

{% block title %}Admin | Users{% endblock %}

{% block content %}
  <section class="panel" style="display:flex;justify-content:space-between;gap:10px;align-items:center">
    <h1 style="margin:0">User Management</h1>
    <a href="#user-modal" class="action gold">Add User</a>
  </section>

  <section class="panel" style="margin-top:12px">
    <input type="text" placeholder="Search users..." style="width:100%;padding:10px;border-radius:10px;border:1px solid rgba(197,218,255,.25);background:#0d2444;color:#fff">
  </section>

  <section class="panel" style="margin-top:12px">
    <table style="width:100%;border-collapse:collapse">
      <thead>
        <tr>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Avatar</th>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Name</th>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Email</th>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Role</th>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Created</th>
          <th style="text-align:left;padding:8px 4px;border-bottom:1px solid rgba(197,218,255,.25)">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)">ðŸ‘¤</td>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)">Sam Student</td>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)">sam@example.com</td>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)"><span style="background:#133764;padding:4px 8px;border-radius:999px">Student</span></td>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)">2026-01-12</td>
          <td style="padding:10px 4px;border-bottom:1px solid rgba(197,218,255,.15)"><select style="background:#11325e;color:#fff;border:1px solid rgba(255,255,255,.2);padding:6px;border-radius:8px"><option>Edit</option><option>Delete</option></select></td>
        </tr>
        <tr>
          <td style="padding:10px 4px">ðŸ‘¤</td>
          <td style="padding:10px 4px">Jane Teacher</td>
          <td style="padding:10px 4px">jane@example.com</td>
          <td style="padding:10px 4px"><span style="background:#18426f;padding:4px 8px;border-radius:999px">Teacher</span></td>
          <td style="padding:10px 4px">2026-01-10</td>
          <td style="padding:10px 4px"><select style="background:#11325e;color:#fff;border:1px solid rgba(255,255,255,.2);padding:6px;border-radius:8px"><option>Edit</option><option>Delete</option></select></td>
        </tr>
      </tbody>
    </table>
  </section>

  <section id="user-modal" class="panel" style="margin-top:12px">
    <h3 style="margin-top:0">Add / Edit User</h3>
    <div class="grid" style="grid-template-columns:1fr 1fr">
      <input type="text" placeholder="Name" style="padding:10px;border-radius:10px;border:1px solid rgba(197,218,255,.25);background:#0d2444;color:#fff">
      <input type="email" placeholder="Email" style="padding:10px;border-radius:10px;border:1px solid rgba(197,218,255,.25);background:#0d2444;color:#fff">
      <input type="password" placeholder="Password" style="padding:10px;border-radius:10px;border:1px solid rgba(197,218,255,.25);background:#0d2444;color:#fff">
      <select style="padding:10px;border-radius:10px;border:1px solid rgba(197,218,255,.25);background:#0d2444;color:#fff"><option>Admin</option><option>Teacher</option><option>Student</option></select>
    </div>
    <p style="margin:12px 0 0"><button type="button" class="action gold" style="cursor:pointer">Save</button> <button type="button" class="action" style="cursor:pointer">Cancel</button></p>
  </section>
{% endblock %}
