{# templates/dashboard/teacher.html.twig #}
{% extends 'back/base.html.twig' %}

{% block content %}
<style>
    .neural-card {
        background: var(--panel-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 30px;
        transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .neural-card::before {
        content: ""; position: absolute; top: 0; left: 0; width: 4px; height: 100%;
        background: var(--cyan); opacity: 0; transition: 0.3s;
    }

    .neural-card:hover {
        transform: translateY(-5px);
        border-color: var(--cyan);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    }

    .neural-card:hover::before { opacity: 1; }

    .stat-label { font-size: 0.7rem; color: #94a3b8; font-weight: 800; letter-spacing: 2px; }
    .stat-number { font-size: 3.5rem; font-weight: 900; margin-top: 5px; }

    /* Floating AI Button */
    .fab-ai {
        position: fixed; bottom: 40px; right: 40px;
        width: 60px; height: 60px;
        background: linear-gradient(135deg, var(--cyan), var(--purple));
        border-radius: 50%;
        display: flex; justify-content: center; align-items: center;
        box-shadow: 0 0 20px rgba(34, 211, 238, 0.4);
        cursor: pointer; transition: 0.3s; border: none;
    }

    .fab-ai:hover { transform: scale(1.1) rotate(15deg); box-shadow: 0 0 30px var(--cyan); }

    .progress-bar {
        height: 6px; background: rgba(255,255,255,0.05); border-radius: 10px; overflow: hidden;
    }
    .progress-fill {
        height: 100%; background: linear-gradient(90deg, var(--cyan), var(--purple));
        box-shadow: 0 0 10px var(--cyan);
    }
</style>

<div style="display: grid; gap: 30px;">
    
    {# Header #}
    <div style="display: flex; justify-content: space-between; align-items: flex-end;">
        <div>
            <h1 style="margin: 0; font-size: 2.5rem; letter-spacing: -2px;">NEURAL_<span style="color: var(--cyan);">FACULTY</span>_CENTER</h1>
            <p style="color: #64748b; font-family: monospace; font-size: 0.8rem;">[ SESSION_STABLE ] [ UPTIME: 99.9% ]</p>
        </div>
        <div style="display: flex; gap: 10px;">
            <div style="background: rgba(34, 211, 238, 0.1); color: var(--cyan); padding: 8px 15px; border-radius: 8px; font-size: 0.8rem; font-weight: bold;">
                SYNC_COMPLETE
            </div>
        </div>
    </div>

    {# Stats Grid #}
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        <div class="neural-card">
            <div class="stat-label">REGISTERED_MATRICES</div>
            <div class="stat-number">{{ studentCount|default(42) }}</div>
            <div style="color: var(--cyan); font-size: 0.7rem; font-family: monospace;">+2 new this week</div>
        </div>
        <div class="neural-card">
            <div class="stat-label">ACTIVE_GROUPS</div>
            <div class="stat-number">{{ groupCount|default(8) }}</div>
            <div style="color: var(--purple); font-size: 0.7rem; font-family: monospace;">4 pending sync</div>
        </div>
        <div class="neural-card">
            <div class="stat-label">SYSTEM_MASTERY</div>
            <div class="stat-number" style="color: var(--cyan);">81%</div>
            <div class="progress-bar" style="margin-top: 10px;"><div class="progress-fill" style="width: 81%;"></div></div>
        </div>
    </div>

    {# Performance Table #}
    <div class="neural-card" style="padding: 0;">
        <div style="padding: 25px; border-bottom: 1px solid var(--border); display: flex; justify-content: space-between;">
            <span style="font-weight: 800; font-size: 0.9rem;">STUDENT_SYNCHRONIZATION_INDEX</span>
            <span style="color: #444; font-family: monospace; font-size: 0.7rem;">REF_ID: {{ "now"|date("Ymd") }}</span>
        </div>
        <table style="width: 100%; border-collapse: collapse; font-size: 0.9rem;">
            <thead>
                <tr style="text-align: left; color: #64748b; font-size: 0.7rem; text-transform: uppercase;">
                    <th style="padding: 20px 30px;">Entity_Name</th>
                    <th>Neural_Progress</th>
                    <th>Mastery</th>
                    <th style="padding-right: 30px; text-align: right;">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students|default([]) %}
                <tr style="border-bottom: 1px solid var(--border);">
                    <td style="padding: 20px 30px; font-weight: 700;">{{ student.user.firstName }}.sys</td>
                    <td>
                        <div class="progress-bar" style="width: 200px;"><div class="progress-fill" style="width: 85%;"></div></div>
                    </td>
                    <td style="color: var(--cyan); font-weight: 900;">85%</td>
                    <td style="padding-right: 30px; text-align: right;"><a href="#" style="color: var(--cyan); text-decoration: none;">[ VIEW ]</a></td>
                </tr>
                {% else %}
                    <tr style="border-bottom: 1px solid var(--border);">
                        <td style="padding: 20px 30px; font-weight: 700;">Sam_Student.sys</td>
                        <td><div class="progress-bar" style="width: 200px;"><div class="progress-fill" style="width: 70%;"></div></div></td>
                        <td style="color: var(--cyan); font-weight: 900;">70%</td>
                        <td style="padding-right: 30px; text-align: right;"><a href="#" style="color: var(--cyan); text-decoration: none;">[ OPEN ]</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<a href="{{ path('teacher_lesson_create_ai') }}" class="fab-ai" title="Generate AI Content">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>
</a>

{% endblock %}