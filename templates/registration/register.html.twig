{% extends 'front/landing_base.html.twig' %}

{% block title %}Initialize Profile | StudyCompanionPlus{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --neon-cyan: #00f3ff;
        --neon-purple: #bc13fe;
        --bg-dark: #070b14;
    }

    .auth-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        position: relative;
        z-index: 5;
    }

    /* --- THE UNIQUE BOX --- */
    .auth-card {
        width: 100%;
        max-width: 850px; 
        background: rgba(10, 15, 28, 0.9);
        border-radius: 20px;
        padding: 40px;
        position: relative;
        overflow: hidden; 
        backdrop-filter: blur(20px);
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
    }

    .auth-card::before {
        content: '';
        position: absolute;
        top: -50%; left: -50%;
        width: 200%; height: 200%;
        background: conic-gradient(transparent, var(--neon-cyan), var(--neon-purple), transparent 30%);
        animation: rotate-border 4s linear infinite;
        z-index: -2;
    }

    .auth-card::after {
        content: '';
        position: absolute;
        inset: 3px;
        background: rgba(10, 15, 28, 0.95);
        border-radius: 17px;
        z-index: -1;
    }

    @keyframes rotate-border { 100% { transform: rotate(360deg); } }

    /* --- CUSTOM CSS MECHANICAL EYES --- */
    .eye-scanner {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 30px;
    }

    .cyber-eye {
        width: 70px;
        height: 70px;
        background: #000;
        border: 2px solid var(--neon-purple);
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(188, 19, 254, 0.3);
    }

    .pupil {
        width: 25px;
        height: 25px;
        background: var(--neon-cyan);
        border-radius: 50%;
        position: absolute;
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 0 0 15px var(--neon-cyan), inset 0 0 10px #fff;
        transition: transform 0.1s ease-out;
    }

    .eye-lid {
        position: absolute;
        width: 100%;
        height: 100%;
        background: var(--bg-dark);
        border-bottom: 2px solid var(--neon-cyan);
        top: -100%; 
        z-index: 10;
        transition: top 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .is-closed .eye-lid { top: 0; }

    /* --- MINI PASSWORD EYE --- */
    .mini-eye-toggle {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        height: 14px;
        border: 1px solid var(--neon-cyan);
        border-radius: 50% 0 50% 0; 
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 20;
        transition: 0.3s;
    }

    .mini-pupil {
        width: 6px;
        height: 6px;
        background: var(--neon-cyan);
        border-radius: 50%;
        box-shadow: 0 0 5px var(--neon-cyan);
    }

    .eye-visible .mini-eye-toggle {
        border-radius: 50%;
        background: rgba(0, 243, 255, 0.2);
    }

    /* --- FORM GRID --- */
    .registration-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .form-group label {
        color: var(--neon-cyan);
        text-transform: uppercase;
        font-size: 10px;
        letter-spacing: 2px;
        margin-bottom: 8px;
        display: block;
    }

    .input-container { position: relative; }

    .form-control {
        width: 100%;
        background: rgba(0,0,0,0.5);
        border: 1px solid rgba(0,243,255,0.2);
        border-radius: 10px;
        padding: 14px;
        color: white;
        outline: none;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: var(--neon-cyan);
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.4);
    }

    .btn-submit {
        grid-column: span 2;
        padding: 16px;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple));
        border: none;
        border-radius: 12px;
        color: black;
        font-weight: 900;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 0 20px var(--neon-cyan);
        margin-top: 20px;
    }

    .login-link {
        grid-column: span 2;
        text-align: center;
        margin-top: 15px;
        color: #8892b0;
        text-decoration: none;
        font-size: 12px;
    }
    .login-link b { color: var(--neon-cyan); }

    /* --- FLOATING ASSETS WITH CIRCULATING RINGS --- */
    .floating-container {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: 0; pointer-events: none;
    }
    
    .icon-box { 
        position: absolute; 
        width: 200px; 
        height: 200px; 
        display: flex; 
        align-items: center; 
        justify-content: center;
        animation: float-y 6s ease-in-out infinite;
    }

    .ring {
        position: absolute;
        border: 2px solid transparent;
        border-radius: 50%;
        animation: rotate-ring 4s linear infinite;
    }

    .ring-cyan { border-top: 2px solid var(--neon-cyan); border-bottom: 2px solid var(--neon-cyan); width: 160px; height: 80px; transform: rotateX(75deg); }
    .ring-purple { border-left: 2px solid var(--neon-purple); border-right: 2px solid var(--neon-purple); width: 160px; height: 80px; transform: rotateX(75deg) rotateZ(90deg); }

    @keyframes float-y {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-30px); }
    }

    @keyframes rotate-ring {
        from { transform: rotateX(75deg) rotateZ(0deg); }
        to { transform: rotateX(75deg) rotateZ(360deg); }
    }

</style>
{% endblock %}

{% block content %}
<canvas id="neural-canvas" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.3;"></canvas>

<div class="floating-container">
    <div class="icon-box" style="top: 15%; left: 8%;">
        <div class="ring ring-cyan"></div>
        <span style="font-size: 80px; filter: drop-shadow(0 0 20px var(--neon-cyan));">ðŸ§ </span>
    </div>
    <div class="icon-box" style="bottom: 15%; right: 8%; animation-delay: -3s;">
        <div class="ring ring-purple" style="animation-direction: reverse;"></div>
        <span style="font-size: 80px; filter: drop-shadow(0 0 20px var(--neon-purple));">ðŸŽ“</span>
    </div>
</div>

<div class="auth-wrapper">
    <div class="auth-card" id="main-card">
        <h1 style="text-align: center; color: white; letter-spacing: 5px; margin-bottom: 5px;">INITIALIZE</h1>
        <p style="text-align:center; color: #8892b0; margin-bottom: 25px; font-size: 10px;">[ NEURAL UPLINK V2.0 ]</p>

        <div class="eye-scanner" id="eye-scanner">
            <div class="cyber-eye">
                <div class="eye-lid"></div>
                <div class="pupil"></div>
            </div>
            <div class="cyber-eye">
                <div class="eye-lid"></div>
                <div class="pupil"></div>
            </div>
        </div>

        {{ form_start(registrationForm) }}
            <div class="registration-grid">
                {% for field in registrationForm %}
                    {% if field.vars.name != 'plainPassword' and field.vars.name != '_token' %}
                        <div class="form-group">
                            <label>{{ field.vars.label|default(field.vars.name)|replace({'_': ' '})|upper }}</label>
                            {{ form_widget(field, {'attr': {'class': 'form-control', 'placeholder': 'Scanning...'}}) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="form-group" style="grid-column: span 2;">
                    <label>ACCESS KEY (PASSWORD)</label>
                    <div class="input-container" id="pass-container">
                        {{ form_widget(registrationForm.plainPassword, {
                            'id': 'pass-input',
                            'attr': {
                                'class': 'form-control', 
                                'placeholder': 'â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢',
                                'onfocus': 'lockEyes()',
                                'onblur': 'unlockIfHidden()'
                            }
                        }) }}
                        <div class="mini-eye-toggle" onclick="toggleNeuralPass()">
                            <div class="mini-pupil"></div>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="grid-column: span 2; background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px; border: 1px dashed var(--neon-cyan);">
                    <label style="display:flex; align-items:center; gap:10px; cursor:pointer; margin-bottom:0;">
                        <input type="checkbox" required style="width:18px; height:18px; accent-color: var(--neon-cyan);">
                        <span>ROBOTCHECK: Human user verified</span>
                    </label>
                </div>

                <button type="submit" class="btn-submit">Establish Link</button>

                <a href="{{ path('app_login') }}" class="login-link">
                    ALREADY REGISTERED? <b>TERMINAL LOGIN</b>
                </a>
            </div>
            {{ form_widget(registrationForm._token) }}
        {{ form_end(registrationForm, {'render_rest': false}) }}
    </div>
</div>

<script>
    const canvas = document.getElementById('neural-canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    const drops = Array(Math.floor(canvas.width / 16)).fill(1);
    function draw() {
        ctx.fillStyle = "rgba(7, 11, 20, 0.1)";
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = "#00f3ff"; 
        ctx.font = "16px monospace";
        drops.forEach((y, i) => {
            ctx.fillText(Math.floor(Math.random()*2), i * 16, y * 16);
            if (y * 16 > canvas.height && Math.random() > 0.975) drops[i] = 0;
            drops[i]++;
        });
    }
    setInterval(draw, 33);

    const pupils = document.querySelectorAll('.pupil');
    const scanner = document.getElementById('eye-scanner');
    const passInput = document.getElementById('pass-input');
    const passContainer = document.getElementById('pass-container');
    let locked = false;

    document.addEventListener('mousemove', (e) => {
        if (locked) return;
        pupils.forEach(pupil => {
            const rect = pupil.getBoundingClientRect();
            const eyeX = rect.left + rect.width / 2;
            const eyeY = rect.top + rect.height / 2;
            const angle = Math.atan2(e.clientY - eyeY, e.clientX - eyeX);
            const distance = Math.min(15, Math.hypot(e.clientX - eyeX, e.clientY - eyeY) / 10);
            const x = Math.cos(angle) * distance;
            const y = Math.sin(angle) * distance;
            pupil.style.transform = `translate(calc(-50% + ${x}px), calc(-50% + ${y}px))`;
        });
    });

    function lockEyes() {
        if (!passContainer.classList.contains('eye-visible')) {
            locked = true;
            scanner.classList.add('is-closed');
        }
    }

    function unlockIfHidden() {
        if (!passContainer.classList.contains('eye-visible')) {
            locked = false;
            scanner.classList.remove('is-closed');
        }
    }

    function toggleNeuralPass() {
        const isSecret = passInput.type === "password";
        passInput.type = isSecret ? "text" : "password";
        if (isSecret) {
            passContainer.classList.add('eye-visible');
            locked = false;
            scanner.classList.remove('is-closed');
        } else {
            passContainer.classList.remove('eye-visible');
            if (document.activeElement === passInput) lockEyes();
        }
    }
</script>
{% endblock %}